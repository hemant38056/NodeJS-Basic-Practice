      <div class="modal fade" id="myUpdateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Human Manage Record</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/update_records1" method="post">
                <div class="md-3">
                    <label>Id</label>
                    <input type="text" name="id" required readonly id="id" class="form-control">
                </div>
                <div class="md-3">
                    <label>Name</label>
                    <input type="text" name="name" required  id="name" class="form-control">
                </div>
                <div class="md-3">
                    <label>AadharCard</label>
                    <input type="text" name="aadharcard"  id="aadharcard" class="form-control">
                </div>
                <div class="md-3">
                    <label>Address</label>
                    <input type="text" name="address"  id="address" class="form-control">
                </div>
                <div class="md-3">
                    <!-- <a href="/update_records1?hm_id = " class="btn btn-primary">Update Now</a> -->
                    <button class="btn btn-primary mt-4">Update Now</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <br><br>


    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2">
                <table class="table table-primary" id="ram">
                    <thead>
                        <th>SNO</th>
                        <th>Name</th>
                        <th>Aadhar Card</th>
                        <th>Address</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                        <% record.forEach(function(row) { %>
                            <tr>
                              <td><%= row.id %></td>
                              <td><%= row.name %></td>
                              <td><%= row.Aadharcard %></td>
                              <td><%= row.address %></td>
                              <td><a href="/delete_record2?hm_id=<%=row.id%>" class="btn btn-danger" onclick="return confirm('Are You Sure?')">Delete</a>
                                  <a href="" class="btn btn-primary btn-update" data-bs-toggle="modal" data-bs-target="#myUpdateModal" onclick="human_Update_Field('<%= row.id %>', '<%= row.name %>', '<%= row.Aadharcard %>','<%= row.address %>')">Update</a>
                              </td> 
                            </tr>
                          <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
